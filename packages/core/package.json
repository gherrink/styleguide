{
  "name": "@styleguide/core",
  "description": "Core to generate a styleguide out of css comments.",
  "version": "0.0.0",
  "license": "MIT",
  "keywords": [
    "styleguide",
    "ui-kit",
    "documentation",
    "generation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gherrink/styleguide",
    "directory": "packages/core"
  },
  "author": "Maurice Busch",
  "homepage": "https://github.com/gherrink/styleguide/tree/master/packages/core#readme",
  "bugs": "https://github.com/gherrink/styleguide/issues",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "prebuild": "rm -rf dist dist",
    "prepare": "if [ ! -d 'dist' ]; then pnpm build; fi",
    "prerelease": "pnpm build",
    "release": "pnpm --workspace-root package:release $(pwd)",
    "release:dry": "pnpm --workspace-root package:release-dry $(pwd)",
    "test": "jest"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "sideEffects": false,
  "dependencies": {
    "comment-parser": "^1.4.1",
    "marked": "^12.0.2"
  }
}
