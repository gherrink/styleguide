{
  "name": "styleguide",
  "private": true,
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "scripts": {
    "lint": "eslint --cache --quiet --no-error-on-unmatched-pattern ./",
    "lint:fix": "eslint --fix --cache --quiet --no-error-on-unmatched-pattern ./",
    "lint:staged": "lint-staged",
    "build": "lerna run build",
    "watch": "lerna watch -- $npm_execpath run build",
    "test": "lerna run test",
    "pack": "$npm_execpath run clean:packs && lerna exec -- $npm_execpath pack",
    "clean:packages": "rm -rf ./packages/*/dist",
    "clean:packs": "rm -rf ./packages/*/*.tgz",
    "reset": "$npm_execpath run clean:packages && $npm_execpath run clean:packs && rm -rf ./**/.cache && rm -rf ./**/node_modules && rm -rf ./pnpm-lock.yaml && pnpm install"
  },
  "devDependencies": {
    "@atomico/rollup-plugin-sizes": "^1.1.4",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@html-eslint/eslint-plugin": "^0.24.1",
    "@html-eslint/parser": "^0.24.1",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^8.2.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.38",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "rollup": "^2.67.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "stylelint": "^16.6.1",
    "stylelint-config-clean-order": "^5.4.2",
    "stylelint-config-standard": "^36.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^4.5.5"
  }
}
